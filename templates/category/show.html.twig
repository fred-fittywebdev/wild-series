{# templates/program/show.html.twig #}
{% extends 'base.html.twig' %}
{# {% block title %}Série #{{ program.id }} #}
{# {% endblock %} #}

	{% block body %}
		<div class="container"> <h1>Nom de catégorie:
			{{ category_name.name }}</h1>
		{% for category in categories %}
			<div>
				<h2>{{loop.index}}
					-
					{{category.title}}
					-
					{{category.id}}
				</h2>
				<p>{{category.summary}}</p>

				<a class="btn btn-secondary text-primary" href="{{ path("program_show", { id: category.id }) }}">Voir la fiche</a>
			</div>
		{% else %}
			No program found
		{% endfor %}
		<a href="{{ path("category_index")}}">Voir la fiche</a>


	</div>


{% endblock %}
