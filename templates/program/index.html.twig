{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}

{% block body %}
	<h1 class="my-3 text-center">Toutes les séries de la table program :
	</h1>
	<div class="container">
		<div class="row d-flex">
			{% for program in programs %}

				<div class="col-md-4">
					<div class="card m-4">
						<div class="card-header">
							<h4 class="card-title">{{ loop.index }}
								/
								{{ program.title }}
								- Catégorie :
								{{ program.category.name }}</h4>
						</div>
						<div class="card-body">
							<p class="card-text">{{ program.summary }}</p>
							{# Lien vers la fiche de la série : #}
							<a class="btn btn-secondary text-primary" href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
						</div>


					</div>
				</div>

			{% else %}
				Aucune série trouvée.
			{% endfor %}
		</div>
	</div>
	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>
{% endblock %}
